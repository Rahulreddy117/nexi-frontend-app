<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:editTextBackground">@drawable/rn_edit_text_material</item>

        <!-- FULL EDGE-TO-EDGE (screen draws under status & nav bars) -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <!-- Black bars + white icons -->
        <item name="android:statusBarColor">#00000000</item>        <!-- transparent black -->
        <item name="android:navigationBarColor">#00000000</item>    <!-- transparent black -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Fixes OPPO/Vivo gesture nav overlay -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        
        <!-- Important: DON'T use fitsSystemWindows=true here -->
        <!-- It would add unwanted padding and break edge-to-edge -->
    </style>

</resources>